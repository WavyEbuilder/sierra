(block metalog

  (blockinherit .sys.agent.template)

  (call metalog.conf.list_file_dirs (subj))
  (call metalog.conf.read_file_files (subj))

  (allow subj self (capability2 (syslog)))

  (block conf

    (filecon "/etc/metalog\.conf" file file_context)

    (filecon "/etc/metalog\.d" dir file_context)
    (filecon "/etc/metalog\.d/.*" any file_context)

    (macro conf_file_type_transition_file ((type ARG1))
           (call .conf.file_type_transition
                 (ARG1 file file "metalog.conf"))
           (call .conf.file_type_transition
                 (ARG1 file dir "metalog.d")))

    (blockinherit .file.conf.template))

  (block tmp

    (filecon "/dev/log" socket file_context)

    (macro map_file_files ((type ARG1))
           (allow ARG1 file (file (map))))

    (macro tmp_fs_type_transition_file ((type ARG1)(class ARG2)(name ARG3))
           (call .tmp.fs_type_transition
                 (ARG1 file ARG2 ARG3)))

    (blockinherit .file.macro_template_files)
    (blockinherit .file.macro_template_sock_files)
    (blockinherit .file.tmp.base_template)))

(in file.unconfined

    (call .metalog.conf.conf_file_type_transition_file (typeattr))
    (call .metalog.tmp.tmp_fs_type_transition_file
          (typeattr sock_file "log")))

(in after metalog.exec

    (filecon "/usr/bin/metalog" file file_context))
