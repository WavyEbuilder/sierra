(block login

  (blockinherit .sys.agent.template)

  (block sulogin

    (blockinherit .sys.agent.template)))

(in getty

    (call .login.subj_type_transition (subj)))

(in after login.exec

    (filecon "/usr/bin/login" file file_context))

(in after login.sulogin.exec

    (filecon "/usr/bin/sulogin" file file_context))
